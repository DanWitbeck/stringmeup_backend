# .env.example — copy to .env for local development
# Never commit .env to git

PORT=8080

# PostgreSQL — local example
DATABASE_URL=postgres://postgres:password@localhost:5432/threadcraft?sslmode=disable

# Generate with: openssl rand -hex 32
JWT_SECRET=change_me_to_a_random_secret

# Cloudflare R2
# Find these in: R2 → Manage R2 API tokens
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=threadcraft-images
# Your R2 public bucket URL (enable public access in R2 dashboard)
R2_PUBLIC_URL=https://pub-xxxxxxxxxxxx.r2.dev